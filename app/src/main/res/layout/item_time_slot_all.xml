<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvDayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/baumans"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Day Name" />

    <View
        android:id="@+id/dividerDay"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@+id/tvDayName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvDayName"
        app:layout_constraintTop_toTopOf="@+id/tvDayName" />

    <TextView
        android:id="@+id/tvStarttimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Start Time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDayName" />

    <TextView
        android:id="@+id/tvStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Start Time"
        app:layout_constraintBottom_toBottomOf="@+id/tvStarttimeLabel"
        app:layout_constraintStart_toEndOf="@+id/tvStarttimeLabel"
        app:layout_constraintTop_toTopOf="@+id/tvStarttimeLabel" />

    <TextView
        android:id="@+id/tvEndTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="End Time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStarttimeLabel" />

    <TextView
        android:id="@+id/tvEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Time"
        app:layout_constraintBottom_toBottomOf="@+id/tvEndTimeLabel"
        app:layout_constraintStart_toStartOf="@+id/tvStartTime"
        app:layout_constraintTop_toTopOf="@+id/tvEndTimeLabel" />

    <TextView
        android:id="@+id/tvAvailableAtLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Available At"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEndTimeLabel" />

    <TextView
        android:id="@+id/tvAvailableAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available At"
        app:layout_constraintBottom_toBottomOf="@+id/tvAvailableAtLabel"
        app:layout_constraintStart_toStartOf="@+id/tvEndTime"
        app:layout_constraintTop_toTopOf="@+id/tvAvailableAtLabel" />

    <TextView
        android:id="@+id/tvSlotActiveLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="Slot Active"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAvailableAtLabel" />

    <TextView
        android:id="@+id/tvSlotActive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slot Active"
        app:layout_constraintBottom_toBottomOf="@+id/tvSlotActiveLabel"
        app:layout_constraintStart_toStartOf="@+id/tvAvailableAt"
        app:layout_constraintTop_toTopOf="@+id/tvSlotActiveLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>